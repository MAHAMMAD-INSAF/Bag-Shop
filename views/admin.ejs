<%- include('./partials/header') %>
<div class="w-full min-h-screen flex items-start px-10 md:px-20 py-10 md:py-20">
    <!-- Sidebar -->
    <div class="w-[25%] h-screen flex flex-col items-start">
        <div class="flex flex-col">
            <a class="block w-fit mb-2 text-lg font-semibold hover:text-blue-600" href="/admin/products">All Products</a>
            <a class="block w-fit mb-2 text-lg font-semibold hover:text-blue-600" href="/admin/products/create">Create New Product</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="w-[75%] flex flex-col gap-5">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold">All Products</h2>
            <% if (products && products.length > 0) { %>
                <a class="text-red-500 hover:underline" href="/admin/products/delete-all">Delete All Products</a>
            <% } %>
        </div>

        <div class="flex flex-wrap items-start gap-5">
            <% if (products && products.length > 0) { %>
                <% products.forEach(function(product) { %>
                <div class="w-60 bg-zinc-100 rounded-lg overflow-hidden shadow-md">
                    <div class="w-full h-52 bg-zinc-300">
                        <!-- Assuming product has an image property -->
                        <img class="w-full h-full object-cover" src="<%= product.image %>" alt="<%= product.name %>">
                    </div>
                    <div class="flex justify-between items-center px-4 py-4">
                        <div>
                            <h3 class="font-semibold"><%= product.name %></h3>
                            <h4>â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-600" href="/products/<%= product._id %>" title="View Product">
                            <i class="ri-eye-line"></i>
                        </a>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <p>No products found. <a href="/admin/products/create" class="text-blue-500 hover:underline">Create one now!</a></p>
            <% } %>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>